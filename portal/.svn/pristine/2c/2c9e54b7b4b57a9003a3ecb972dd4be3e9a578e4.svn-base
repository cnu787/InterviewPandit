            <script type="text/javascript">
                var anim_flag = false; var total_steps = 4; var steps = Array(); var steps_handle = Array(); parent.next_disable();
                for(i=1;i<=total_steps;i++) steps[i] = Array();
                steps[1][0] = 'playStep1()'; steps[1][1] = 300; steps[1][2] = 0;
                steps[2][0] = 'playStep2()'; steps[2][1] = 11000; steps[2][2] = 0;
                steps[3][0] = 'playStep3()'; steps[3][1] = 14800; steps[3][2] = 0;
                steps[4][0] = 'playStep4()'; steps[4][1] = 19500; steps[4][2] = 0;
                $(window).load(function() {
                parent.loadAudioTranscript('m3_07','',true,true);
                });

                function postAudioPlay(){
                    anim_flag = true;
                    for(i=1;i<=total_steps;i++) {
                        steps_handle[i] = setTimeout(steps[i][0],steps[i][1]);
                    }
                    
			if($('#content').css('visibility')=='hidden') {
                                $('#content').css('display','none');
				$('#content').css('visibility','visible').fadeIn('normal');
			}
                }

                function pauseAnimation(current_time) {  
                    anim_flag = false;
                    for(i=1;i<=steps_handle.length;i++) {
                        if(steps[i][2]==0) clearTimeout(steps_handle[i]);
                    }
                }
                function resumeAnimation(current_time) {
                    anim_flag = true;
                    if(current_time>0) {
                        current_time = Math.floor(parseInt(current_time)) * 1000;
                        ii = 1;
                        for(j=1;j<=total_steps;j++) {
                            if(current_time<= steps[j][1]) ii = j; break;
                        }

                        for(k=ii;k<=total_steps;k++) { steps_handle[k] = setTimeout(steps[k][0],steps[k][1] - current_time); }
                    }
                }
                
                function playStep1() { 
                    if(anim_flag==true) { 
                        $('#ContentText').fadeIn('normal',function() { steps[1][2] = 1; });
                    }
                }
                function playStep2() { 
                    if(anim_flag==true) { 
                        $('.segoeuil').fadeIn('normal', function() { steps[2][2] = 1; });
                    }
                }
				
                function playStep3() { 
                    if(anim_flag==true) { 
                        $('#instruction_text').fadeIn('normal',function() { steps[3][2] = 1; });
                    }
                }
                function playStep4() { 
                    if(anim_flag==true) { 
                        $('#instruction_text1').fadeIn('normal',function() { steps[4][2] = 1; });
                    }
                }
            </script>
