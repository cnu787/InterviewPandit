<!DOCTYPE html>
<html>
	<head>
	<title>Introduction</title>
            <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
            <link rel="stylesheet" type="text/css" href="../shared/css/content.css" />
            <link rel="stylesheet" type="text/css" href="../shared/css/module4_l6.css" />
            <script src="../shared/js/jquery/jquery.min.js"></script>
			<script src="../shared/js/jquery/jquery.transit.min.js"></script>
            <script src="../shared/js/jquery/jquery-ui.min.js"></script>
            <style>
            #page1_girl { display:none }
            .fader { display:block; }
        </style>
    </head>
	<body>
            <div id="content"> 
            <img src="../shared/images/board_2.png" style="height:0px; width:0px; float:left; opacity: 0">
            
		<div id="pageTitle">Course Summary</div>
                <div id="page1_bord"><img src="../shared/images/board_2.png" border="0"></div>
                <div class="fader">
                    <div id="ContentText" >
                        <div id="instruction_text" class="animate">You have now completed this course on ‘<strong><b>Interviewing Skills</b></strong>’ successfully. You are now ready to conduct a mock interview.</div>
                        <div id="instruction_text1" class="animate">The Resources section provides you with additional reference material that you can use to <strong><b><i>Prepare</i></b></strong> for and <strong><b><i>conduct</i></b></strong> a mock interview and <strong><b><i>evaluate</i></b></strong> candidates effectively. </div>
                        <div id="instruction_text2" class="animate"><strong><b><i>Best of Luck!!</i></b></strong></div>
                    </div>
                </div>
            </div>
	</body>
        <script type="text/javascript">
                var anim_flag = false; var total_steps = 3; var steps = Array(); var steps_handle = Array(); parent.next_disable();
                for(i=1;i<=total_steps;i++) steps[i] = Array();
                steps[1][0] = 'playStep1()'; steps[1][1] = 300; steps[1][2] = 0;
		steps[2][0] = 'playStep2()'; steps[2][1] = 7000; steps[2][2] = 0;
                steps[3][0] = 'playStep3()'; steps[3][1] = 16900; steps[3][2] = 0;
                
                $(window).load(function() {
                parent.loadAudioTranscript('module4_6','',true);
                });

                function postAudioPlay(){
                    anim_flag = true;
                    for(i=1;i<=total_steps;i++) {
                        steps_handle[i] = setTimeout(steps[i][0],steps[i][1]);
                    }
                    
			if($('#content').css('visibility')=='hidden') {
                                $('#content').css('display','none');
				$('#content').css('visibility','visible').fadeIn('normal');
			}
                }

                function pauseAnimation(current_time) {  
                    anim_flag = false;
                    for(i=1;i<=steps_handle.length;i++) {
                        if(steps[i][2]==0) clearTimeout(steps_handle[i]);
                    }
                }
                function resumeAnimation(current_time) {
                    anim_flag = true;
                    if(current_time>0) {
                        current_time = Math.floor(parseInt(current_time)) * 1000;
                        ii = 1;
                        for(j=1;j<=total_steps;j++) {
                            if(current_time<= steps[j][1]) ii = j; break;
                        }

                        for(k=ii;k<=total_steps;k++) { steps_handle[k] = setTimeout(steps[k][0],steps[k][1] - current_time); }
                    }
                }
                
                function playStep1() { 
                    if(anim_flag==true) { 
                        $('#instruction_text').fadeIn('normal',function() { steps[1][2] = 1; });
                    }
                }
                function playStep2() { 
                    if(anim_flag==true) { 
                        $('#instruction_text1').fadeIn('normal',function() { steps[2][2] = 1; });
                    }
                }
				
		function playStep3() { 
                    if(anim_flag==true) { 
                        $('#instruction_text2').fadeIn('normal',function() { steps[3][2] = 1; });
                    }
                }
                
                
            </script>
</html>