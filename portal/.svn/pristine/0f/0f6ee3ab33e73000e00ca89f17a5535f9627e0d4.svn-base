		$(".btn").click(function(){
                        parent.gotoPage(7);
                    });
        
			$(document).ready(function() {
                        if($('#content').css('visibility')=='hidden') 
                	{
                    	$('#content').css('display','none');
				$('#content').css('visibility','visible').fadeIn('normal');
					}
                                        
                        jQuery.fn.disable = function(){ $(this).addClass('btn1disabled');  $(this).attr("disabled",'disabled'); };
                        jQuery.fn.enable = function(){ $(this).removeClass('btn1disabled'); $(this).removeAttr("disabled"); };
                        
                         jQuery.fn.prevnet_drop = function(){ 
                                                            $(".custom-dropdown__select").prop("disabled", true); 
                                                            };
                        $('#btn_submit').disable(); 
						
						
                       
                         $('.custom-dropdown__select').change(function() { 
                            var all_selected = true;
                            $('.custom-dropdown__select').each(function() { 
                                if($(this).val()==='-1') all_selected = false;
                            });
                            if(all_selected) $('#btn_submit').enable(); else $('#btn_submit').disable();  
                        });
                        
                           
                        $("#btn_submit").click(function(){
                               if(($("#content_selectbox1").val()=== '0')&& 
                               ($("#content_selectbox2").val()=== '1')&& 
                               ($("#content_selectbox3").val()=== '0')&& 
                               ($("#content_selectbox4").val()=== '1')&& 
                               ($("#content_selectbox5").val()=== '1')&& 
                               ($("#content_selectbox6").val()=== '1')&&
                               ($("#content_selectbox7").val()=== '1')&&
                               ($("#content_selectbox8").val()=== '0'))
                                {
                                    parent.loadAudioTranscript('module1_6_correct','',true,true);
                                    $('#correct_div').fadeIn(1000);
                                    $('#correct_ans_img').fadeIn(1000);
                                    $(".resultbg").fadeIn(1000);
                                    $('#btn_submit').disable();
                                    $('#btn_submit').prevnet_drop();
                                    $("#btn_submit").unbind("click");
                                 }
                                else
                                {
                                    parent.loadAudioTranscript('module1_6_incorrect','',true,true);
                                    $('#incorrect_div').fadeIn(1000);
                                    $('#incorrect_ans_img').fadeIn(1000);
                                    $(".resultbg").fadeIn(1000);
                                    $('#btn_submit').disable();
                                    $('#btn_submit').prevnet_drop();
                                    $("#btn_submit").unbind("click");
                                }
                         }); 
