        /****************** card interactivity *****************/
        
        $('.card').click(function() {
            parent.unloadAudioTranscript();
            if(!$(this).hasClass('discard') && !$(this).hasClass('open') && !$(this).hasClass('close') && is_flipping == false) {
                var tmp = $(this).attr('id').split('_'); id = tmp[1]; 
                current_card = id; flipMe(current_card); 
            }
            $(this).addClass('visited');
            
            if($('#card_1').hasClass('visited') && $('#card_2').hasClass('visited') && $('#card_3').hasClass('visited') && $('#card_4').hasClass('visited'))
                                           {
                                           parent.next_enable();
                                           }
        });
        function flipMe(id) {
            is_flipping = true;
            id = $('#card_'+id); $(id).removeClass('close'); 
            if($(id).hasClass('open')) { $(id).removeClass('open');}
            else {
                $(id).flip({
                    direction:'lr',
                    content:'',
                    speed:500,
                    onEnd: function() { $(id).addClass('open'); is_flipping = false; $("#btn_playagain").removeClass('disabled'); },
                })	 
            }
        }
        $("#btn_playagain").click(function(){
            if(!$(this).hasClass('disabled')){
                $('.card.open').each(function(){
                        var tmp = $(this).attr('id').split('_'); id = tmp[1]; 
                        current_card = id; flipMe(current_card); 

                        $(this).css('background-color','#4c6d86').removeClass('open');
                }); 

                is_flipping = false; current_card = 1;

                $(this).addClass('disabled');
            }
        });
        
