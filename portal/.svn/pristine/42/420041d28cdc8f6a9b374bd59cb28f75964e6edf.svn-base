		<property name="password" value="TmiPran123" /> -->
		<!-- The number of connections created when the pool is started. 
    (actually created when first connection is opened)-->
    <property name="initialSize" value="100"/>
   <!--  <property name="maxActive" value="100" /> -->
    <property name="maxIdle" value="10" />
   <!--  <property name="maxWait" value="5000" /> -->
    <property name="poolPreparedStatements" value="true" />
    <property name="maxOpenPreparedStatements" value="100" />

   
	</bean>

	<bean id="secTransactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<tx:annotation-driven transaction-manager="secTransactionManager" />
</beans>