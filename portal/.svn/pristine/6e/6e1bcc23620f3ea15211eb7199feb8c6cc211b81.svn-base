<script type="text/javascript">

                var anim_flag = false; var total_steps = 2; var steps = Array(); var steps_handle = Array(); parent.next_disable();
                for(i=1;i<=total_steps;i++) steps[i] = Array();
                steps[1][0] = 'playStep1()'; steps[1][1] = 15600; steps[1][2] = 0;
                steps[2][0] = 'playStep2()'; steps[2][1] = 16500; steps[2][2] = 0;
				
                $(window).load(function() {
                parent.loadAudioTranscript('module2_l7','',true,false);
                });

                function postAudioPlay(){
                    anim_flag = true;
                    for(i=1;i<=total_steps;i++) {
                        steps_handle[i] = setTimeout(steps[i][0],steps[i][1]);
                    }
                    
			if($('#content').css('visibility')=='hidden') {
                                $('#content').css('display','none');
				$('#content').css('visibility','visible').fadeIn('normal');
			}
                }

                function pauseAnimation(current_time) {  
                    anim_flag = false;
                    for(i=1;i<=steps_handle.length;i++) {
                        if(steps[i][2]==0) clearTimeout(steps_handle[i]);
                    }
                }
                function resumeAnimation(current_time) {
                    anim_flag = true;
                    if(current_time>0) {
                        current_time = Math.floor(parseInt(current_time)) * 1000;
                        ii = 1;
                        for(j=1;j<=total_steps;j++) {
                            if(current_time<= steps[j][1]) ii = j; break;
                        }

                        for(k=ii;k<=total_steps;k++) { steps_handle[k] = setTimeout(steps[k][0],steps[k][1] - current_time); }
                    }
                }
			
		function playStep1() { 
                    if(anim_flag==true) { 
                        $('.two').fadeIn('normal',function() { steps[1][2] = 1; });
                    }
                }
		function playStep2() { 
                    if(anim_flag==true) { 
                        $('#ul_text').fadeIn('normal',function() { steps[2][2] = 1; });
                    }
                }
                 
				 
                    $(document).ready(function() {
                            $('#btn_submit').addClass('disabled');
				
                                $('#btn_submit').click(function() {
                                if(!$(this).hasClass('disabled')) {
				var is_correct = true;
				if($('#chk1').is(':checked') == true) is_correct = false;
				if($('#chk2').is(':checked') == true) is_correct = false;
				if($('#chk3').is(':checked') == false) is_correct = false;
				if($('#chk4').is(':checked') == false) is_correct = false;
				
				$('#btn_submit').addClass('disabled');
				$("input.check").attr("disabled", true);
				if(is_correct) showFeedback(1); else showFeedback(2);
				}
                                });
                                function showFeedback(ch) {
                                    
                                    if(ch==1) { $('.resultbg').fadeIn("normal"); $('#fbc').fadeIn('normal'); parent.loadAudioTranscript('module2_l7_correct','',true,true);  } else if(ch==2) { $('.resultbg').fadeIn("normal");  $('#fbw').fadeIn('normal'); parent.loadAudioTranscript('module2_l7_incorrect','',true,true); }
                                }
		$('.btn1').click(function() {  $('.ctry').attr('disabled','disabled');  });
		$('.btn2').click(function() {  parent.gotoPage(16); $('.resultbg').fadeOut('normal'); });
		$(".check").click(function () {
			var check1_selected = false; 
			$(".check1:checked").each(function() {
				check1_selected = true;
			});
			if(check1_selected ) $('#btn_submit').removeClass('disabled'); else $('#btn_submit').addClass('disabled');
		});
                
	});
    </script>
